% n = 1
figure(1);
number = [-0.5 1];
f_nu = 1 - roots(number) / 1 + roots(number);
denomntr = [0.5 1];
f_de = 1 - roots(denomntr) / 1 + roots(denomntr);
hold on;
title("1st Order Pade Approximation");
ylabel("F(s)");
xlabel("ds");
plot(roots(number), f_nu, 'o');
plot(roots(denomntr), f_de, 'X');
hold off;
